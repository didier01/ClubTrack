<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_order"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="10dp"
        android:padding="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_id_item_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/margin_top_edit_text"
                android:text="numero de orden"
                android:textSize="@dimen/text_size_title" />

            <TextView
                android:id="@+id/tv_nameuser_item_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="@dimen/margin_top_edit_text"
                android:text="Nombre de usuario"
                android:textSize="@dimen/text_size_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date_item_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_top_edit_text"
                    android:text="Fecha"
                    android:textSize="@dimen/text_size_body_dialog" />

                <TextView
                    android:id="@+id/tv_price_item_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/margin_top_edit_text"
                    android:text="Precio"
                    android:textSize="@dimen/text_size_body_dialog" />
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>