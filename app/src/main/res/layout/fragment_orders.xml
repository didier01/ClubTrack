<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrdersFragment">

    <!-- TODO: Update blank fragment layout -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Numero de orden"
           android:gravity="center"
           android:padding="@dimen/margin_top_edit_text"
           android:textSize="@dimen/text_size_title"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Usuario"
               android:padding="@dimen/margin_top_edit_text"
               android:textSize="@dimen/text_size_title"
               android:layout_weight="0.2"/>

           <TextView
               android:id="@+id/tv_username_orders_fragment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Usuario"
               android:padding="@dimen/margin_top_edit_text"
               android:layout_weight="0.8"
               android:textSize="@dimen/text_size_title"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Direccion de entrega"
               android:padding="@dimen/margin_top_edit_text"
               android:textSize="@dimen/text_size_title" />

           <TextView
               android:id="@+id/tv_address_orders_fragment"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Carrera 28 # 5-46"
               android:padding="@dimen/margin_top_edit_text"
               android:textSize="@dimen/text_size_title"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Fecha de pedido"
               android:padding="@dimen/margin_top_edit_text"
               android:textSize="@dimen/text_size_title"
               android:layout_weight="0.2"/>

           <TextView
               android:id="@+id/tv_date_orders_fragment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2/2/2019"
               android:padding="@dimen/margin_top_edit_text"
               android:layout_weight="0.8"
               android:textSize="@dimen/text_size_title"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Total"
               android:padding="@dimen/margin_top_edit_text"
               android:textSize="@dimen/text_size_title"
               android:layout_weight="0.2"/>

           <TextView
               android:id="@+id/tv_price_orders_fragment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="55000"
               android:padding="@dimen/margin_top_edit_text"
               android:layout_weight="0.8"
               android:textSize="@dimen/text_size_title"/>

       </LinearLayout>


       <ListView
           android:id="@+id/listview_orders_fragment"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"></ListView>

   </LinearLayout>

</FrameLayout>