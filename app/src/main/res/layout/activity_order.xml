<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.shop.OrderActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.9"
        android:padding="@dimen/margin_top_edit_text">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_top_edit_text">

        </android.support.v7.widget.RecyclerView>

    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/margin_top_edit_text">

        <!-- <Button
            android:id="@+id/btn_cart_menu_add_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Agregar mas productos" />
            -->
        <TextView
            android:id="@+id/tv_cart_menu_add_more"
            style="@style/RtlUnderlay.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_edit_text"
            android:text="@string/add_products_cart"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:id="@+id/tv_cart_menu_empty"
            style="@style/RtlUnderlay.Widget.AppCompat.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_top_edit_text"
            android:text="@string/empty_cart"
            android:textColor="#aa0000"
            android:textSize="@dimen/text_size_title" />

        <Button
            android:id="@+id/btn_cart_order"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button"
            android:layout_marginLeft="@dimen/margin_sides_button"
            android:layout_marginTop="@dimen/margin_top_edit_text"
            android:layout_marginRight="@dimen/margin_sides_button"
            android:background="@drawable/style_button"
            android:text="@string/make_order"
            android:textSize="@dimen/text_size_body_dialog" />

    </LinearLayout>

</LinearLayout>