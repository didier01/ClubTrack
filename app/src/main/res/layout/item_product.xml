<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_shop"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:elevation="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_item_name_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:maxLines="2"
                    android:padding="5dp"
                    android:text="Producto"
                    android:textSize="@dimen/text_size_title" />

                <ImageView
                    android:id="@+id/imv_item_product"
                    android:layout_width="125dp"
                    android:layout_height="110dp"
                    android:layout_weight="0.9"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:padding="5dp">


                <TextView
                    android:id="@+id/txv_item_price_product"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Precio"
                    android:textSize="@dimen/text_size_body_menu_adapter" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txv_item_size_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingEnd="2sp"
                        android:text="30"
                        android:textSize="@dimen/text_size_body_menu_adapter" />

                    <TextView
                        android:id="@+id/txv_item_type_size_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="ml"
                        android:textSize="12sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/txv_item_description_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="jabon de manos"
                    android:textSize="@dimen/text_size_body_menu_adapter" />


            </LinearLayout>
            <Button
                android:id="@+id/btn_item_buy_product"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:background="@drawable/style_button"
                android:text="Agregar" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>