<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_shop"
        android:layout_width="150dp"
        android:layout_height="280dp"
        android:elevation="10dp"
        android:padding="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shadow"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_name_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Producto"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imv_product"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txv_price_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Precio"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txv_size_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="tamaÃ±o 30"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txv_description_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="jabon de manos"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="12sp" />

                <Button

                    android:id="@+id/btn_buy_product"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:layout_weight=".5"
                    android:text="Agregar"
                    android:textColor="@color/colorPrimaryText"
                    android:background="@color/colorAccent"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>