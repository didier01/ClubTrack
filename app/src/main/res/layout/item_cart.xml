<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_cart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:id="@+id/cardview_cart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="10dp"
        android:padding="5dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_top_edit_text"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_cart_item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/margin_top_edit_text"
                    android:layout_weight="0.1"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_size" />

                <ImageView
                    android:id="@+id/imv_cart_item"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="@dimen/margin_top_edit_text"
                    android:gravity="center_horizontal"
                    android:layout_weight="0.8"
                    android:src="@android:drawable/ic_dialog_alert" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_top_edit_text"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_quantity_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imv_cart_remove"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/ic_remove" />

                    <EditText
                        android:id="@+id/edt_cart_quantity"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textSize="@dimen/text_size" />

                    <ImageView
                        android:id="@+id/imv_cart_add"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:src="@drawable/ic_add" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_cart_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#aa1111"
                        android:text="Delete"
                        android:layout_margin="@dimen/margin_top"
                        android:layout_weight="0.5"
                        android:textColor="@color/colorSecondaryText" />

                    <Button
                        android:id="@+id/btn_cart_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/colorAccent"
                        android:text="Save"
                        android:layout_margin="@dimen/margin_top"
                        android:layout_weight="0.5"
                        android:textColor="@color/colorSecondaryText" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>