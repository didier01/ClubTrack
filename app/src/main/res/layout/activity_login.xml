<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.login.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/edt_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    android:gravity="center"
                    android:hint="@string/sesion_user"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="40dp"
                    android:layout_margin="15dp"
                    android:textSize="@dimen/text_size" />

            </RelativeLayout>

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@android:drawable/ic_lock_lock"
                android:gravity="center"
                android:hint="@string/sesion_user_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:paddingRight="40dp"
                android:layout_margin="15dp"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="1">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginLeft="@dimen/margin_sides_button"
                android:layout_marginRight="@dimen/margin_sides_button"
                android:text="@string/start_sesion"
                android:textSize="@dimen/text_size"/>

            <Button
                android:id="@+id/btn_login_regis_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxWidth="250dp"
                android:layout_marginLeft="@dimen/margin_sides_button"
                android:layout_marginRight="@dimen/margin_sides_button"
                android:text="@string/sesion_registry_user"
                android:textSize="@dimen/text_size"/>

            <Button
                android:id="@+id/btn_lose_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxWidth="250dp"
                android:layout_marginLeft="@dimen/margin_sides_button"
                android:layout_marginRight="@dimen/margin_sides_button"
                android:text="@string/sesion_recover_password"
                android:textSize="@dimen/text_size"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>